  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend",
      "cwd": "${workspaceFolder}/backend",
      "python": "${workspaceFolder}/backend/.venv/bin/python",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["server:app", "--reload"],
      "jinja": true
    },
    {
      "name": "Frontend",
      "cwd": "${workspaceFolder}/estimador-react",
      "command": "pnpm run dev",
      "type": "node-terminal",
      "request": "launch"
    }
  ]
}
